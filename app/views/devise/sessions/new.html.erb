<div class="devise-container image-devise">
  <div class="devise-content-container">
    <h2 style="display: flex; justify-content: center;margin-bottom: 20px;">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean, :label => " Salvar meus dados." if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions" style="display: flex; justify-content: center;margin-bottom: 20px;">
        <%= f.button :submit, "Log in", {class: "form-button"} %>
      </div>
    <% end %>
    <div style="display: flex; justify-content: center; margin-bottom: 20px;flex-direction: column;">
    <%= render "devise/shared/links" %> </div>
  </div>
</div>

