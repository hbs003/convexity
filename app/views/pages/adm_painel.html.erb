<div class="adm-painel">
  <h1>PAINEL DO ADMINISTRADOR</h1>
  <hr>
  <h1>Posts</h1>

  <%= link_to 'Novo Post', new_post_path %>

  <table>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate(post.content, :length => 80) -%></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
  <hr>
  <h1>Subscribers</h1>
  <% @subscribers.each do |subscriber| %>
    <ol>
      <li><p> <%= subscriber.email %> / <%= subscriber.created_at %></p> </li>
    </ol>
  <% end %>
  <hr>
  <hr>
  <hr>
  <hr>
</div>
