<div class="section">
<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :date, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :author, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :call, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control textareabigger">
      <%= f.input :content, :input_html => {:rows => 10}, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
   <div class="control">
     <%= f.input :photo %>
     <%= f.input :photo_cache, as: :hidden %>
    </div>
  </div>

  <%= f.button :submit, 'Criar/editar post', class: "button-form--next3" %>
<% end %>
</div>
