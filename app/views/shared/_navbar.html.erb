<div class="navbar-wagon navbar-lp">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <span class="name-logo">|YC|</span>
  <% end %>

  <!-- Right Navigation -->

  <div class="navbar-wagon-right">

    <%= link_to t(".blog", default: "Blog"), buttercms_blog_path, class: "navbar-wagon-item navbar-wagon-link" %>


    <% if user_signed_in? %>

      <!-- Avatar with dropdown menu -->
     <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "paper-plane.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "Editar Perfil", "/users/edit", class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to "Minha Carteira", "/mywallet", class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to "Contato", "/message", class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to "Material didático", "/material", class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to "Termos e Condições", "/terms", class: "navbar-wagon-item navbar-wagon-link" %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>

