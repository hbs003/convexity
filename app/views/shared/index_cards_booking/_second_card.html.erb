<div class="base-container">
  <div class="base-container--bookings">
    <div class="card-booking-process">
      <div class="index-number index-number-booking-new">
        <h1>2</h1>
      </div>
      <div class="heading index-number-booking-new">
        <h2>Origin</h2>
      </div>

      <div class="content-container">
        <div class="traveller_origin">

          <div class="row">
            <div class="col-xs-12 col-md-5">
              <h3>Start your Trip from</h3>
            </div>
            <div class="col-xs-12 col-md-7">
              <input type="text" name="booking[origin]" value="<%=params[:city]%>" placeholder="e.g. Barcelona" class="input-field-booking-origin">
            </div>
          </div>

        </div>

        <div class="traveller_origin">

          <div class="row">
            <div class="col-xs-12 col-md-5">
              <h3>Departure Date</h3>
            </div>
            <div class="col-xs-12 col-md-7">
              <input type="date" name="booking[start_date]" class="input-field-booking-date">
            </div>
          </div>

        </div>

        <div class="traveller_origin">
          <div class="departure_time-container">
            <div class="row">
              <div class="col-xs-12 col-md-4">
                <h3>Departure Time</h3>
              </div>
              <div class="col-xs-12 col-md-8">
                <div class="r">
                  <div class="radio-container">
                    <div class="type-container">
                      <div class="radio-trip-type-group">
                        <div class="input-container radio-button-departure-time">
                          <input type="radio" name="booking[start_time]" class="radio-button" value="9">
                          <div class="radio-title">
                            <label for="departure_time" class="radio-title-label">9 AM</label>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="type-container">
                      <div class="radio-trip-type-group">
                        <div class="input-container radio-button-departure-time">
                          <input type="radio" name="booking[start_time]" class="radio-button" value="12">
                          <div class="radio-title">
                            <label for="departure_time" class="radio-title-label">12 AM</label>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="type-container">
                      <div class="radio-trip-type-group">
                        <div class="input-container radio-button-departure-time">
                          <input type="radio" name="booking[start_time]" class="radio-button" value="15">
                          <div class="radio-title">
                            <label for="departure_time" class="radio-title-label">3 PM</label>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="type-container">
                      <div class="radio-trip-type-group">
                        <div class="input-container radio-button-departure-time">
                          <input type="radio" name="booking[start_time]" class="radio-button" value="18">
                          <div class="radio-title">
                            <label for="departure_time" class="radio-title-label">6 PM</label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              </div>

            </div>
          </div>
          <button class="button-form button-form--next index-number-booking-new"> Next </button>

        </div>
      </div>
    </div>
  </div>
</div>
